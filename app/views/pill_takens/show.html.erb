<div>
  <div>
    <h1>
      Pill taken #<%= @the_pill_taken.id %> details
    </h1>

    <div>
      <div>
        <a href="/pill_takens">
          Go back
        </a>
      </div>

      <div>
        <a href="<%=delete_pill_taken_path(@the_pill_taken.id) %>">
          Delete pill taken
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Pill
      </dt>
      <dd>
        <%= @the_pill_taken.pill_id %>
      </dd>

      <dt>
        Quantity
      </dt>
      <dd>
        <%= @the_pill_taken.quantity %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_pill_taken.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_pill_taken.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit pill taken
    </h2>

    <form action="/modify_pill_taken/<%= @the_pill_taken.id %>"  method="post" >
      <div>
        <label for="pill_id_box">
          Pill
        </label>

        <input type="text" id="pill_id_box" name="query_pill_id" value="<%= @the_pill_taken.pill_id %>">
      </div>

      <div>
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="query_quantity" value="<%= @the_pill_taken.quantity %>">
      </div>

      <button>
        Update pill taken
      </button>
    </form>
  </div>
</div>

<hr>
