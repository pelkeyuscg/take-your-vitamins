<div>
  <div>
    <h1>
      List of all pill takens
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new pill taken
    </h2>

    <form action="/insert_pill_taken" method="post">
      <div>
        <label for="pill_id_box">
          Pill
        </label>

        <input type="text" id="pill_id_box" name="query_pill_id">
      </div>

      <div>
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="query_quantity">
      </div>

      <button>
        Create pill taken
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Pill
        </th>

        <th>
          Quantity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_pill_takens.each do |a_pill_taken| %>
      <tr>
        <td>
          <%= a_pill_taken.id %>
        </td>

        <td>
          <%= a_pill_taken.pill_id %>
        </td>

        <td>
          <%= a_pill_taken.quantity %>
        </td>

        <td>
          <%= time_ago_in_words(a_pill_taken.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pill_taken.updated_at) %> ago
        </td>

        <td>
          <a href="<%=pills_taken_path(a_pill_taken.id) %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
