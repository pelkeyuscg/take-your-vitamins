<div>
  <div>
    <h1>
      List of all pills
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new pill
    </h2>
    <%= form_with(url: new_pill_path) do %>

      <div>
        <%= label_tag :vitamin_id_box, "Vitamin" %>
        <input type="text" id="vitamin_id_box" name="query_vitamin_id">
      </div>

      <div>
        <%= label_tag :owner_id_box, "Owner" %>
        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <%= label_tag :brand_box, "Brand" %>
        <input type="text" id="brand_box" name="query_brand">
      </div>

      <div>
        <%= label_tag :description_box, "Description" %>
        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <%= label_tag :ingredients_box, "Ingredients" %>
        <input type="text" id="ingredients_box" name="query_ingredients">
      </div>

      <div>
        <%= label_tag :quantity_box, "Quantity" %>
        <input type="text" id="quantity_box" name="query_quantity">
      </div>

      <div>
        <%= label_tag :upc_box, "Upc" %>
        <input type="text" id="upc_box" name="query_upc">
      </div>

      <div>
        <%= label_tag :order_more_box, "Order more index" %>
        <input type="text" id="order_more_box" name="query_order_more">
      </div>

      <div>
        <%= label_tag :pill_takens_count_box, "Pill takens count" %>
        <input type="text" id="pill_takens_count_box" name="query_pill_takens_count">
      </div>

      <button>
        Create pill
      </button>
    <% end %>
  </div>
</div>
<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Vitamin
        </th>
        <th>
          Brand
        </th>

        <th>
          Description
        </th>

        <th>
          Ingredients
        </th>

        <th>
          Quantity
        </th>

        <th>
          Upc
        </th>

        <th>
          Order more
        </th>

        <th>
          Pill takens count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pills.each do |a_pill| %>
      <tr>
        <td>
          <%= a_pill.vitamin_id %>
        </td>

        <td>
          <%= a_pill.brand %>
        </td>

        <td>
          <%= a_pill.description %>
        </td>

        <td>
          <%= a_pill.ingredients %>
        </td>

        <td>
          <%= a_pill.quantity %>
        </td>

        <td>
          <%= a_pill.upc %>
        </td>

        <td>
          <%= a_pill.order_more %>
        </td>

        <td>
          <%= a_pill.pill_takens_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_pill.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pill.updated_at) %> ago
        </td>

        <td>
          <%= link_to "Show Details", pills_path(a_pill.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
