<div>
  <div>
    <h1>
      List of all pills
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h3>
      Add a new pill
    </h3>
    <%= form_with(url: new_pill_path) do %>

      <div>
        <%= label_tag :vitamin_id %>
        <input type="text" id="vitamin_id" name="vitamin_id">
      </div>


      <div>
        <%= label_tag :brand %>
        <input type="text" id="brand" name="brand">
      </div>

      <div>
        <%= label_tag :description %>
        <input type="text" id="description" name="description">
      </div>

      <div>
        <%= label_tag :ingredients %>
        <input type="text" id="ingredients" name="ingredients">
      </div>

      <div>
        <%= label_tag :quantity %>
        <input type="text" id="quantity" name="quantity">
      </div>

      <div>
        <%= label_tag :upc %>
        <input type="text" id="upc" name="upc">
      </div>

      <div>
        <%= label_tag :order_more %>
        <input type="text" id="order_more" name="order_more">
      </div>

      <div>
        <%= label_tag :pill_takens_count %>
        <input type="text" id="pill_takens_count" name="pill_takens_count">
      </div>

      <button>
        Create pill
      </button>
    <% end %>
  </div>
</div>
<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Vitamin
        </th>
        <th>
          Brand
        </th>

        <th>
          Description
        </th>

        <th>
          Ingredients
        </th>

        <th>
          Quantity
        </th>

        <th>
          Upc
        </th>

        <th>
          Order more
        </th>

        <th>
          Pill takens count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pills.each do |pill| %>
      <tr>
        <td>
          <%= pill.vitamin_id %>
        </td>

        <td>
          <%= pill.brand %>
        </td>

        <td>
          <%= pill.description %>
        </td>

        <td>
          <%= pill.ingredients %>
        </td>

        <td>
          <%= pill.quantity %>
        </td>

        <td>
          <%= pill.upc %>
        </td>

        <td>
          <%= pill.order_more %>
        </td>

        <td>
          <%= pill.pill_takens_count %>
        </td>

        <td>
          <%= time_ago_in_words(pill.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(pill.updated_at) %> ago
        </td>

        <td>
          <%= link_to "Show Details", pill_path(pill.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
