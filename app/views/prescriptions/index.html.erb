<div>
  <div>
    <h1>
      List of all prescriptions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new prescription
    </h2>

    <form action="<%new_prescription_path%>" method="post">
      <div>
        <label for="frequency_box">
          Frequency
        </label>

        <input type="text" id="frequency_box" name="query_frequency">
      </div>

      <div>
        <label for="pill_id_box">
          Pill
        </label>

        <input type="text" id="pill_id_box" name="query_pill_id">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <button>
        Create prescription
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Frequency
        </th>

        <th>
          Pill
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_prescriptions.each do |a_prescription| %>
      <tr>
        <td>
          <%= a_prescription.id %>
        </td>

        <td>
          <%= a_prescription.frequency %>
        </td>

        <td>
          <%= a_prescription.pill_id %>
        </td>

        <td>
          <%= a_prescription.owner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_prescription.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_prescription.updated_at) %> ago
        </td>

        <td>
          <a href="<%=prescriptions_path(a_prescription.id) %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
