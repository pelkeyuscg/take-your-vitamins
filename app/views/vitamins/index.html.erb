<div>
  <div>
    <h1>
      List of all vitamins
    </h1>
  </div>
</div>



<div><%= link_to 'Add new vitamin', new_vitamin_path %>
  <div>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Vitamin
        </th>
        
        <th>
          Name
        </th>

        <th>
          MG per serving
        </th>

        <th>
        </th>
      </tr>

      <% @vitamins.each do |vitamin| %>
      <tr>
        <td>
          <%= vitamin.id %>
        </td>
        <td>
          <%= vitamin.name %>
        </td>
        <td>
          <%= vitamin.amount_per_serving %>
        </td>

        <td>
        <%= link_to "Show details", vitamin_path(vitamin.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
